@model ProductVM
@{
    ViewData["Title"] = "Create";
}

<h1>@(Model.Product.Id!=0?"Update":"Create")</h1>
<div asp-validation-summary="All"></div>
<div>
    <img src="@Model.Product.ImageUrl" />
</div>
<form method="post" enctype="multipart/form-data">
    <input asp-for="Product.Id" hidden/>
    <input asp-for="Product.ImageUrl" hidden />
    <div>
        <label asp-for="Product.Title"></label>
        <input asp-for="Product.Title" />
        <span asp-validation-for="Product.Title"></span>
    </div>
    <div>
        <label asp-for="Product.Description"></label>
        <input asp-for="Product.Description" />
        <span asp-validation-for="Product.Description"></span>
    </div>
    <div>
        <label asp-for="Product.Author"></label>
        <input asp-for="Product.Author" />
        <span asp-validation-for="Product.Author"></span>
    </div>
    <div>
        <label asp-for="Product.ISBN"></label>
        <input asp-for="Product.ISBN" />
        <span asp-validation-for="Product.ISBN"></span>
    </div>
    <div>
        <label asp-for="Product.Price"></label>
        <input asp-for="Product.Price" />
        <span asp-validation-for="Product.Price"></span>
    </div>
    <div>
        <label asp-for="Product.ListPrice"></label>
        <input asp-for="Product.ListPrice" />
        <span asp-validation-for="Product.ListPrice"></span>
    </div>
    <div>
        <label asp-for="Product.Price50"></label>
        <input asp-for="Product.Price50" />
        <span asp-validation-for="Product.Price50"></span>
    </div>
    <div>
        <label asp-for="Product.Price100"></label>
        <input asp-for="Product.Price100" />
        <span asp-validation-for="Product.Price100"></span>
    </div>
    <div>
        <label asp-for="Product.CategoryId"></label>
        <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList">
            <option disabled selected>--Select category--</option>
        </select>
        <span asp-validation-for="Product.CategoryId"></span>
    </div>
    <div>
        <label asp-for="Product.ImageUrl"></label>
        <input type="file" name="file"/>
        <span asp-validation-for="Product.ImageUrl"></span>
    </div>
    <div>
        @if (Model.Product.Id != 0)
        {
            <button type="submit" class="btn btn-success">Update</button>
        }
        else
        {
            <button type="submit" class="btn btn-success">Create</button>
        }
        <a class="btn btn-danger" asp-area="Admin" asp-controller="Product" asp-action="Index">Return to Index</a>
    </div>
</form>

@section scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}



