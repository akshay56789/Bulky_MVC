@model Company
@{
    ViewData["Title"] = "Create";
}

<h1>@(Model.Id != 0 ? "Update" : "Create")</h1>
<div asp-validation-summary="All"></div>

<form method="post" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="StreetAddress"></label>
        <input asp-for="StreetAddress" />
        <span asp-validation-for="StreetAddress"></span>
    </div>
    <div>
        <label asp-for="City"></label>
        <input asp-for="City" />
        <span asp-validation-for="City"></span>
    </div>
    <div>
        <label asp-for="State"></label>
        <input asp-for="State" />
        <span asp-validation-for="State"></span>
    </div>
    <div>
        <label asp-for="PostalCode"></label>
        <input asp-for="PostalCode" />
        <span asp-validation-for="PostalCode"></span>
    </div>
    <div>
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    
    
    <div>
        @if (Model.Id != 0)
        {
            <button type="submit" class="btn btn-success">Update</button>
        }
        else
        {
            <button type="submit" class="btn btn-success">Create</button>
        }
        <a class="btn btn-danger" asp-area="Admin" asp-controller="Company" asp-action="Index">Return to Index</a>
    </div>
</form>

@section scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}




